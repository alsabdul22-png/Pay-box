{
  "name": "paybox",
  "version": "1.0.0",
  "description": "Professionelle Zahlungsabwicklung und Kassenverwaltung",
  "main": "main.js",
  "author": "PayBox",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win --publish never",
    "create-icon": "node create-icon.js"
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "install": "^0.13.0"
  },
  "build": {
    "appId": "com.paybox.desktop",
    "productName": "PayBox",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "style.css",
      "script.js",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "certificateFile": null,
      "certificatePassword": null,
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PayBox"
    },
    "directories": {
      "buildResources": "assets"
    }
  }
}
